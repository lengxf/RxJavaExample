<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rxexample">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Chapter01">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="chapter01" />
            </intent-filter>
        </activity>
        <activity android:name=".Chapter02">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="chapter02" />
            </intent-filter>
        </activity>
        <activity android:name=".chapter02.RxBusActivity">
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />

                <action android:name="rxbus" />
            </intent-filter>
        </activity>
    </application>

</manifest>